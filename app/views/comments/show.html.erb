<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div class="btn-group my-5">
  <%= link_to "Edit this comment", edit_comment_path(@comment), class: "btn btn-sm btn-outline-light" %>
  <%= link_to "Back to comments", comments_path, class: "btn btn-sm btn-outline-light" %>
  <%= button_to "Destroy this comment", @comment, method: :delete, class: "btn btn-sm btn-outline-light" %>
</div>
