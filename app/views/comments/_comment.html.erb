<div id="<%= dom_id comment %>" class="border p-5">
  <p><%= comment.content %></p>
  <small class="text-muted">
    Author: <span class="text-success"><%= comment.user.email %></span>
  </small><br>
  <small class="text-muted">
    Post: <span class="text-success"><%= comment.post.title %></span>
  </small>
  <div class="mt-2">
    <a
      data-bs-toggle="collapse"
      href="#comment_<%= comment.id %>"
      role="button"
      aria-expanded="false"
      aria-controls="comment_<%= comment.id %>"
    >
      Reply
    </a>
    <div class="collapse" id="comment_<%= comment.id %>">
      <%= render partial: 'comments/reply_comment', locals: { parent: comment } %>
    </div>
  </div>
  <div class="mt-3">
    <%= render comment.children.order(id: :asc) if comment.children.length > 0 %>
  </div>
</div>
